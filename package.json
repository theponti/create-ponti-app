{
  "name": "create-ponti-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cy": "cypress open",
    "cy:headless": "cypress run",
    "dev": "next dev",
    "build": "next build",
    "format": "prettier --config .prettierrc.js -w .",
    "format:check": "prettier --config .prettierrc.js -c .",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:strict": "eslint --max-warnings=0 src",
    "postinstall": "prisma generate",
    "run-eslint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.tsx src",
    "start": "next start",
    "test": "vitest --run",
    "test:update": "vitest run -u",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.4",
    "@prisma/client": "^4.4.0",
    "@trpc/client": "^9.27.4",
    "@trpc/next": "^9.27.4",
    "@trpc/react": "^9.27.4",
    "@trpc/server": "^9.27.4",
    "daisyui": "^2.31.0",
    "next": "12.3.1",
    "next-auth": "~4.10.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.2",
    "superjson": "^1.10.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@testing-library/cypress": "8.0.3",
    "@testing-library/react": "13.4.0",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "cypress": "^10.10.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-prefer-function-component": "3.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-testing-library": "5.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "4.4.0",
    "tailwindcss": "^3.1.8",
    "typescript": "4.7.4",
    "vite": "3.1.8",
    "vitest": "0.24.3"
  },
  "lint-staged": {
    "*": "eslint --fix src",
    "*.css": "stylelint --cache --fix",
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "vitest related --run --coverage=false"
    ]
  },
  "nyc": {
    "report-dir": "coverage/cypress",
    "reporter": [
      "lcov"
    ]
  }
}
